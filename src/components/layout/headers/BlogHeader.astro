---
import Header from "../modular/Header.astro";
import Navigation from "../modular/Navigation.astro";

const { pathname } = Astro.url;
const curPage = pathname.slice(1);
---
<Header>
    <!-- slot nav-left -->

    <!-- slot nav-center -->
    <Navigation slot="nav-center">
        <a aria-current={curPage.startsWith('blog/') ? 'page' : 'false'} href="/blog/">all posts</a>
        <a aria-current={curPage.startsWith('tags/') ? 'page' : 'false'} href="/tags/">tags</a>
    </Navigation>
    <!-- slot nav-right -->
    
</Header>